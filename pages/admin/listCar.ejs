                                            <input id="inputUserName" type="text" name="carName" data-parsley-trigger="change" required  placeholder="Enter Product Name" autocomplete="off" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail">Enter manufacturing year</label>
                                            <input id="inputEmail" type="number" name="year" data-parsley-trigger="change" required  placeholder="Enter manufacturing year" autocomplete="off" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail">Enter price</label>
                                            <input id="inputEmail" type="number" name="price" data-parsley-trigger="change" required  placeholder="Enter Price" autocomplete="off" class="form-control">
                                        </div>
